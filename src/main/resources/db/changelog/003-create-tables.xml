<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="113" author="ivan">
        <createTable schemaName="develop" tableName="athletes">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.athlete_id_seq')">
                <constraints primaryKey="true" primaryKeyName="athlete_pkey" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="123" author="ivan">
        <createTable schemaName="develop" tableName="trainings">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.training_id_seq')">
                <constraints primaryKey="true" primaryKeyName="training_pkey" nullable="false"/>
            </column>
            <column name="sets_amount" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="athlete_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="133" author="ivan">
        <createTable schemaName="develop" tableName="training_types">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.training_type_id_seq')">
                <constraints primaryKey="true" primaryKeyName="training_type_pkey"/>
            </column>
            <column name="type_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="143" author="ivan">
        <createTable schemaName="develop" tableName="audit">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.audit_id_seq')">
                <constraints primaryKey="true" primaryKeyName="audit_pkey"/>
            </column>
            <column name="athlete_login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="action_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>