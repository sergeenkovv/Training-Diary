<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003" author="ivan">
        <createTable schemaName="develop" tableName="athletes" remarks="All athletes">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.athlete_id_seq')" remarks="Athlete ID">
                <constraints primaryKey="true" primaryKeyName="athlete_pkey"/>
            </column>
            <column name="login" type="VARCHAR(255)" remarks="Athlete login"/>
            <column name="password" type="VARCHAR(255)" remarks="Athlete password"/>
            <column name="role" type="VARCHAR(255)" remarks="Athlete role"/>
        </createTable>

        <createTable schemaName="develop" tableName="trainings" remarks="Training athletes">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.training_id_seq')" remarks="Training ID">
                <constraints primaryKey="true" primaryKeyName="training_pkey"/>
            </column>
            <column name="sets_amount" type="VARCHAR(255)" remarks="Number of sets in the training"/>
            <column name="date" type="TIMESTAMP" remarks="Date of the training"/>
            <column name="type_id" type="BIGINT" remarks="ID of the training type"/>
            <column name="athlete_id" type="BIGINT" remarks="ID of the athlete who conducted the training"/>
        </createTable>

        <createTable schemaName="develop" tableName="training_types" remarks="All training types">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('develop.training_type_id_seq')" remarks="Training type ID">
                <constraints primaryKey="true" primaryKeyName="training_type_pkey"/>
            </column>
            <column name="type_name" type="VARCHAR(255)" remarks="Training type name"/>
        </createTable>

        <addForeignKeyConstraint baseTableSchemaName="develop" baseTableName="trainings" baseColumnNames="type_id"
                                 constraintName="fk_type_id"
                                 referencedTableSchemaName="develop" referencedTableName="training_types" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableSchemaName="develop" baseTableName="trainings" baseColumnNames="athlete_id"
                                 constraintName="fk_athlete_id"
                                 referencedTableSchemaName="develop" referencedTableName="athletes" referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>